#!/bin/bash

# Extract values using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Capitalize
height=$(jq '.height' data.json)
weight=$(jq '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # Capitalize

# Convert height and weight to meters and kg
# Pok√©mon API height and weight are in decimetres and hectograms
height_m=$(awk "BEGIN { printf \"%.1f\", $height / 10 }")
weight_kg=$(awk "BEGIN { printf \"%.0f\", $weight / 10 }")

# Final output
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."

